{
    "window.title": "${dirty} ${activeEditorShort}${separator}server [${remoteName}]${separator}${profileName}${separator}${appName}",
    "files.associations": {
        "*.log": "ini",
        "condition_variable": "cpp",
        "vector": "cpp"
    },

    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        //        "shared": true,
    },
    // "files.exclude": {
    //     "shared/*": true
    // },
    "cmake.useCMakePresets": "always",
    "cmake.enableAutomaticKitScan": false,
    "cmake.cmakePath": "/usr/local/bin/cmake",
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "xaver.clang-format",
}